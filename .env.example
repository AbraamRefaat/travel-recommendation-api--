# Environment Configuration for Travel Recommendation API
# Copy this file to .env and update the values

# Server Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Database
POI_DATABASE=Cairo_Giza_Final_Verified_POIs.xlsx

# AI Model Settings
AI_MODEL_NAME=all-MiniLM-L6-v2
CROSS_ENCODER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# CORS Settings (Update with your Flutter app URL in production)
ALLOWED_ORIGINS=*

# Optional: Enable debug mode (development only)
DEBUG=False

# Cache Settings
ENABLE_EMBEDDING_CACHE=True
CACHE_FILE=poi_embeddings.pkl

# Gemini API Key (used by /search-by-interest endpoint)
GEMINI_API_KEY=your_gemini_api_key_here
